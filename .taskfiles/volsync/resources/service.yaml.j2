apiVersion: v1
kind: Endpoints
metadata:
  name: {{ name }}
subsets:
  - addresses:
      - ip: {{source_ip}}
    ports:
      - port: {{source_port}}
---
apiVersion: v1
kind: Service
metadata:
  name: {{ name }}
spec:
  ports:
    - port: {{ target_port }}
      targetPort: {{source_port}}
{% if internal == 'true' %}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{name}}-internal
  annotations:
    {% if internal_https %}
    nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
    {% endif %}
    external-dns.alpha.kubernetes.io/target: "192.168.50.160,192.168.50.182,192.168.50.234"
spec:
  ingressClassName: internal
  rules:
    - host: {{name}}.${SECRET_DOMAIN}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{name}}
                port:
                  number: {{ target_port }}
{% endif %}
{%  if external == 'true' %}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{name}}
  annotations:
    external-dns.alpha.kubernetes.io/target: external.${SECRET_DOMAIN}
spec:
  ingressClassName: external
  rules:
    - host: {{name}}.${SECRET_DOMAIN}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{name}}
                port:
                  number: {{ target_port }}
{% endif %}
